{
  "name": "Remember Me",
  "description": "Word Chapter Chrome Extension.",
  "manifest_version": 2,
  "version": "1.0.0",
  "chrome_url_overrides": {
    "newtab": "popup.html"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "browser_action": {
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png"
    },
    "default_popup": "popup.html",
    "default_title": "Remember Me"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "permissions":[
    "tabs",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ]
}